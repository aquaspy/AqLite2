{
  "name": "HsLauncher",
  "version": "0.1.0",
  "description": "A HeroSmashLauncher :D",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -w"
  },
  "keywords": [
    "HeroSmash;",
    "HeroSmashLauncher;"
  ],
  "author": "DoubleStar",
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.2.12",
    "electron-builder": "^22.8.1",
    "electron-localshortcut": "^3.2.1",
    "nw-flash-trust": "^0.3.0"
  },
  "build": {
    "asar": false,
    "appId": "DoubleStar",
    "mac": {
      "category": "Games"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "icon": "Icon/Icon.png"
  },
  "dependencies": {
    "nw-flash-trust": "^0.3.0",
    "electron-localshortcut": "^3.2.1"
  }
}
